# -*- mode: conf -*-

# Unbind cmd-q (rcmd is bound further down)
lcmd - q : true

# Quick open
cmd + ctrl - e : open /Applications/Emacs.app
cmd + ctrl - s : open /Applications/Slack.app

# Browser tab navigation
cmd + ctrl - 0x21 : skhd --key "ctrl + shift - tab"
cmd + ctrl - 0x1E : skhd --key "ctrl - tab"

# Navigate macOS spaces
# cmd + ctrl - h : skhd --key "ctrl - left"
# cmd + ctrl - n : skhd --key "ctrl - right"

#
# Atreus Emulation L1 (Right command)
#

# Numpad
rcmd - m    : skhd --key "1"
rcmd - 0x2B : skhd --key "2"
rcmd - 0x2F : skhd --key "3"
rcmd - n    : skhd --key "4"
rcmd - e    : skhd --key "5"
rcmd - i    : skhd --key "6"
rcmd - l    : skhd --key "7"
rcmd - u    : skhd --key "8"
rcmd - y    : skhd --key "9"
rcmd - 0x2C : skhd --key "0"

# Arrows
rcmd - f    : skhd --key "up"
rcmd - s    : skhd --key "down"
rcmd - r    : skhd --key "left"
rcmd - t    : skhd --key "right"

# Parens
rcmd - a    : skhd --key "shift - 9"
rcmd - d    : skhd --key "shift - 0"

# Brackets
rcmd - z    : skhd --key "0x21"
rcmd - x    : skhd --key "0x1E"

# Curly braces
rcmd - v    : skhd --key "shift - 0x21"
rcmd - b    : skhd --key "shift - 0x1E"

# Assorted special characters
rcmd - q    : skhd --key "shift - 1"
rcmd - w    : skhd --key "shift - 2"
rcmd - c    : skhd --key "shift - 3"
rcmd - p    : skhd --key "shift - 4"
rcmd - g    : skhd --key "shift - 5"

#
# Yabai config
#

# Toggle floating
fn - z : yabai -m space --layout float
fn - x : yabai -m space --layout bsp

fn + shift - z : yabai -m window --toggle float

# Window selection
fn - n : yabai -m window --focus next
fn - e : yabai -m window --focus prev

fn - h : yabai -m window --focus west
fn - j : yabai -m window --focus south
fn - k : yabai -m window --focus north
fn - l : yabai -m window --focus east

# Window movement
fn + shift - n : yabai -m window --swap next
fn + shift - e : yabai -m window --swap prev

fn + shift - h : yabai -m window --swap west
fn + shift - j : yabai -m window --swap south
fn + shift - k : yabai -m window --swap north
fn + shift - l : yabai -m window --swap east

fn - f    : yabai -m window --toggle zoom-fullscreen

# Spaces
cmd + ctrl - p : yabai -m space --mirror y-axis
cmd + ctrl - h : yabai -m space --focus prev
cmd + ctrl - n : yabai -m space --focus next

fn + cmd - 1 : yabai -m space --focus 1
fn + cmd - 2 : yabai -m space --focus 2
fn + cmd - 3 : yabai -m space --focus 3
fn + cmd - 4 : yabai -m space --focus 4

fn + cmd - n : yabai -m space --create
fn + cmd - d : yabai -m space --destroy

fn + cmd - h : yabai -m window --space prev
fn + cmd - l : yabai -m window --space next

fn - 0x18 : yabai -m space --balance
