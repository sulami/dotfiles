super + Return
    st

super + r
    dmenu_run

super + {Up,Left,Down,Right}
    xdotool mousemove_relative -- {0 -30,-30 0,0 30,30 0}

super + shift + {Up,Left,Down,Right}
    xdotool mousemove_relative -- {0 -5,-5 0,0 5,5 0}

super + alt + {Left,Down,Right}
    xdotool click {1,2,3}

